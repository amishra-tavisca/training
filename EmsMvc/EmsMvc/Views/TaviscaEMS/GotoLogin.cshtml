@model EmsMvc.Models.LoginModel

@using (Html.BeginForm("Authenticate", "TaviscaEMS"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <form action="Authenticate"  method="post">
        
        <fieldset>
            <legend>Login Page</legend>
            <hgroup class="title">
                <h5>@ViewData["message"]</h5>    
            </hgroup>
            <ol>
                <li>
                    @Html.Label("Enter email ")
                    @Html.TextBox("UsernameTextbox")
                </li>
                <li>
                     @Html.Label("Enter password ")
                    @Html.Password("PasswordTextbox")
                </li>
            </ol>
            <input type="submit" value="Submit" />
        </fieldset>
    </form>
   
}





